source "https://rubygems.org"

# Minimal Jekyll setup to avoid native extension issues
gem "jekyll", "~> 4.2"
gem "webrick", "~> 1.7"

# Basic plugins that don't require native extensions
group :jekyll_plugins do
  gem "jekyll-sitemap"
  gem "jekyll-paginate"
  gem "kramdown"
  gem "rouge"
  gem "jekyll-feed"
  gem "jekyll-seo-tag"
  gem "jekyll-archives"
end